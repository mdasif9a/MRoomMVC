@model UserDetailsView
@{
    ViewBag.Title = "Change Password";
    ViewBag.PageTitle = "Change Password";
    Layout = "~/Views/Shared/_LandLordsLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card">
            <div class="card-body">
                <form action="/LandLords/Settings" method="post" class="row g-3">
                    <div class="col-12 mb-2">
                        <label for="OldPassword" class="form-label">Old Password</label>
                        <input type="text" class="form-control" id="OldPassword" name="OldPassword" required>
                    </div>
                    <div class="col-12 mb-2">
                        <label for="Password" class="form-label">New Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-12 mb-2">
                        <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-outline-primary" onclick="return CheckVal()">Submit</button>
                        <button type="reset" class="btn btn-danger ms-3">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        function CheckVal() {
            if ($("#Password").val() === $("#ConfirmPassword").val()) {
                return true;
            } else {
                alert('Password Not Match');
                return false;
            }
        }
    </script>
}