@model UserDetailsView
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>User Registration</title>
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
    <link href="/Content/AdminLayouts/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/AdminLayouts/css/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/Content/AdminLayouts/css/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="/Content/AdminLayouts/css/style.css" rel="stylesheet">
</head>

<body class="bg-warning">

    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pb-2">
                                        <h5 class="card-title text-center text-primary pb-0 fs-4">Create Your Account</h5>
                                    </div>

                                    <form action="/Home/UserRegistration" class="row g-3" method="post">

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Name, new { @class = "form-label text-start" })
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Email, new { @class = "form-label text-start" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Mobile, new { @class = "form-label text-start" })
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @type = "number" })
                                            @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Address, new { @class = "form-label text-start" })
                                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Username, new { @class = "form-label text-start" })
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6">
                                            @Html.LabelFor(m => m.Password, new { @class = "form-label text-start" })
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-6  mb-3">
                                            @Html.LabelFor(m => m.Role, new { @class = "form-label text-start" })

                                            @Html.DropDownListFor(m => m.Role, new List<SelectListItem> {
                                                new SelectListItem { Text = "Select Role", Value = "" },
                                                new SelectListItem { Text = "Rental", Value = "Rental" },
                                                new SelectListItem { Text = "LandLords", Value = "LandLords" }
                                            }, new { @class = "form-select" })

                                            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Sign Up</button>
                                        </div>
                                        <div class="col-12 text-center">
                                            <a href="/Home/Login" class="link-primary">Back To Login</a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main>
    <script src="/Content/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
    <script src="/Content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @if (TempData["datachange"] != null)
    {
        <script type="text/javascript">
            $(function () {
                alert('@TempData["datachange"]');
            });
        </script>
    }
</body>

</html>