                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.WaterName, "Water :", new { @class = "from-label mb-2" })
                                @Html.DropDownListFor(m => m.WaterName, (IEnumerable<SelectListItem>)ViewBag.LWater, "Select Water", new { @class = "form-select" })
