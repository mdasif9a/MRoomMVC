                                @Html.DropDownListFor(m => m.ElectricityName, (IEnumerable<SelectListItem>)ViewBag.LElectricity, "Select Electricity", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.ElectricityName, "", new { @class = "text-danger" })
